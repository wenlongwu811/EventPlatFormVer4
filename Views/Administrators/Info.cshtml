@model IEnumerable<EventPlatFormVer4.Models.Event>

@{
    ViewData["Title"] = "Info";
}

<h1>工作台</h1>
<a asp-action="Details" asp-route-id="@ViewData["admid"]">返回</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("待批准活动")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
