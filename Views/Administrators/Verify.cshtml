@model EventPlatFormVer4.Models.Event

@{
    ViewData["Title"] = "Verify";
}

<h1>活动信息</h1> 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpEndTime)
            </th>
            
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.EventStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.EventEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.SignUpStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.SignUpEndTime)
            </td>
           
        </tr>
    </tbody>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Address)
            </td>
        </tr>
    </tbody>

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Detail)
            </td>
        </tr>
    </tbody>


    <thead>
        <tr>
            <th>
                @Html.DisplayName("审核")
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @switch (Model.State)
                {
                    case 0:
                    <td>
                        <button> <a asp-action="Accept" asp-route-id="@Model.Id">Accept</a> </button>
                        <button> <a asp-action="Ban" asp-route-id="@Model.Id">Ban</a></button>
                    </td>
                    <td><button><a asp-action="Info" asp-route-id="@ViewData["aid"]">Back</a></button></td>
                    break;
                case 1:
                    <td>
                        <button type="button" disabled="disabled"> Accept</button>
                        <button><a asp-action="Ban" asp-route-id="@Model.Id">Ban</a></button>
                        <button><a asp-action="Info" asp-route-id="@ViewData["aid"]">Back</a></button>
                    </td>
                    break;
                case 2:
                    <td>
                        <button><a asp-action="Accept" asp-route-id="@Model.Id">Accept</a></button>
                        <button disabled="disabled">Ban</button>
                        <button><a asp-action="Info" asp-route-id="@ViewData["aid"]">Back</a></button>
                    </td>
                    break;
                case 3:
                    <td>
                        <button type="button" disabled="disabled">接受</button>
                        <button><a asp-action="Ban" asp-route-id="@Model.Id">拒绝</a></button>
                        <button><a asp-action="Info" asp-route-id="@ViewData["aid"]">返回</a></button>
                    </td>
                    break;
                default:
                    break;
            }
            </tr>
        </tbody>
    </table>